{
  "name": "@d-fischer/rate-limiter",
  "version": "0.0.1",
  "description": "Rate limit your requests.",
  "keywords": [
    "rate",
    "limit",
    "http",
    "request"
  ],
  "main": "lib",
  "types": "lib/index",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-fischer/rate-limiter.git"
  },
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "license": "MIT",
  "dependencies": {
    "@d-fischer/logger": "^0.1.0",
    "@types/node": "^12.12.5",
    "@types/promise.allsettled": "^1.0.2",
    "promise.allsettled": "^1.0.1",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^17.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "scripts": {
    "lint": "eslint --ext js,ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "build": "tsc",
    "rebuild": "rimraf lib && yarn run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
